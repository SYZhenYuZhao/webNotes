.order-footer{
  height: 122rpx;
  box-sizing: border-box;
  background: #fbfffe;
  padding:15rpx 45rpx 22rpx 45rpx;
}

.order-footer-button{
  width: 100%;
  height: 84.7rpx;
  background: #005adf;
  color: #fff;
  border-radius: 18rpx;
  font-size: 31rpx;
  text-align: center;
  line-height: 84.7rpx;
}