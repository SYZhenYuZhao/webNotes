.order-container{
  height: 100%;
  background: #eff2f9;
  display:flex;
  flex-direction: column;
}

.order-header{
  display: flex;
  background: #fff;
  border-top:2rpx solid #e7e7e7;
  border-bottom:2rpx solid #e7e7e7;
  height:100rpx;
  box-sizing: border-box;
  justify-content: space-around;
  font-size: 30rpx;
  color: #080808;
}

.order-header-item{
  flex-grow: 1;
  color:black;
  text-align: center;
  line-height: 100rpx;
}
.order-header-item.active{
  position: relative;
}
.order-header-item.active:after{
  content:"";
  display: block;
  width: 94.4rpx;
  height: 6.25rpx;
  background: #0065dd;
  position: absolute;
  bottom:0;
  left:50%;
  margin-left: -47.2rpx;
}

.order-swiper{
  flex-grow: 1;
  background: #ff0;
}

