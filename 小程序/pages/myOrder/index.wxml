<view class="order-container">
  <view class="order-header">
    <view class="order-header-item {{selectedOrderTabIndex==0?'active':''}}" data-current="0" bindtap="orderTabTap">全部订单</view>
    <view class="order-header-item {{selectedOrderTabIndex==1?'active':''}}" data-current="1" bindtap="orderTabTap">待付款</view>
